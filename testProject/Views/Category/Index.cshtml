@using EntityLayer.Concrete
@model List<Category>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="container">
    <div class="row">
        <div class="col">
            <a asp-action="AddCategory" class="btn btn-outline-warning">Yeni Kategori Ekle</a>
        </div>
    </div>


    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Kategori Adı</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@item.kategori_id</td>
                    <td scope="row">@item.kategori_ad</td>
                    <td>
                        <a asp-action="DeleteJob" asp-route-id="@item.kategori_id" class="btn btn-outline-danger">Sil</a>
                    </td>
                    <td>
                        <a asp-action="UpdateJob" asp-route-id="@item.kategori_id" class="btn btn-outline-success">Güncelle</a>
                    </td>
                </tr>


            }


        </tbody>
    </table>
</div>